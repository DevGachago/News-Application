<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:id="@+id/main_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/doMoreLayout"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:background="@android:color/transparent"
                android:id="@+id/backBtn"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:padding="10dp"
                android:src="@drawable/backarr" />


        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:layout_marginTop="8dp" />
        <EditText
            android:id="@+id/et_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your contacts"
            android:inputType="textMultiLine"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/edit_date"
            android:layout_width="376dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:hint="Date Capture" />

        <Button
            android:id="@+id/btn_select_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image or Video"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <VideoView
            android:id="@+id/vv_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_post_announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Announcement"
            android:layout_marginTop="16dp" />
    </LinearLayout>


</LinearLayout>
